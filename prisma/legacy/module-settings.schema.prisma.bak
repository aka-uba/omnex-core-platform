// Prisma Schema for Module Settings and Menu Persistence

// Add to your existing schema.prisma file

model ModuleSetting {
  id        String   @id @default(cuid())
  moduleId  String
  key       String
  value     Json     // Stores the setting value (can be any JSON type)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([moduleId, key])
  @@index([moduleId])
  @@map("module_settings")
}

model ModuleMenu {
  id          String   @id @default(cuid())
  moduleId    String   @unique
  menuItems   Json     // Stores the entire menu structure
  isCustom    Boolean  @default(false) // true if user has customized
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([moduleId])
  @@map("module_menus")
}

model ModuleIcon {
  id        String   @id @default(cuid())
  moduleId  String   @unique
  iconUrl   String   // URL to the uploaded icon
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([moduleId])
  @@map("module_icons")
}






