# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
CORE_DATABASE_URL="postgresql://postgres:your_password@localhost:5432/omnex_core"
PG_HOST="localhost"
PG_PORT="5432"
PG_USER="postgres"
PG_PASSWORD="your_password"

# ============================================
# Authentication & Security
# ============================================
# JWT Secret (min 32 characters, use strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# Refresh Token Secret (different from JWT_SECRET)
JWT_REFRESH_SECRET="your-refresh-token-secret-change-this-different-from-jwt"
JWT_REFRESH_EXPIRES_IN="30d"

# Session Secret
SESSION_SECRET="your-session-secret-change-this"

# ============================================
# Encryption
# ============================================
ENCRYPTION_KEY="your-encryption-key-32-characters"

# ============================================
# Redis Cache (Optional - for production)
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ============================================
# Email Service (Optional)
# ============================================
EMAIL_SERVER="smtp://user:password@smtp.example.com:587"
EMAIL_FROM="noreply@omnexcore.com"

# ============================================
# Payment Integration (Future)
# ============================================
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""

# ============================================
# Storage Configuration
# ============================================
STORAGE_TYPE="local"  # local | s3
STORAGE_LOCAL_PATH="./storage/tenants"

# AWS S3 (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET=""

# ============================================
# Application
# ============================================
NODE_ENV="development"  # development | production | staging
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes in milliseconds

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# ============================================
# Notes
# ============================================
# - Never commit .env file to version control
# - Use strong, unique secrets for production
# - Rotate secrets regularly
# - Keep this template updated when adding new variables
