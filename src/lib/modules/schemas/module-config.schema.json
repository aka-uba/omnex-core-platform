{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "name",
        "slug",
        "version",
        "description"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "slug": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "minCoreVersion": {
            "type": "string"
        },
        "maxCoreVersion": {
            "type": "string"
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "slug",
                    "version"
                ],
                "properties": {
                    "slug": {
                        "type": "string"
                    },
                    "version": {
                        "type": "string"
                    }
                }
            }
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "multiTenant": {
            "type": "object",
            "properties": {
                "database": {
                    "type": "object",
                    "properties": {
                        "tables": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "migrations": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "api": {
            "type": "object",
            "properties": {
                "routes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "path",
                            "method"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "method": {
                                "type": "string",
                                "enum": [
                                    "GET",
                                    "POST",
                                    "PUT",
                                    "DELETE",
                                    "PATCH"
                                ]
                            },
                "permissions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            },
                            "icon": {
                                "type": "string"
                            },
                            "order": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
                }
            }
        },
        "menu": {
            "type": "object",
            "properties": {
                "main": {
                    "$ref": "#/definitions/menuItem"
                },
                "admin": {
                    "$ref": "#/definitions/menuItem"
                },
                "settings": {
                    "$ref": "#/definitions/menuItem"
                }
            }
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "component"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "component": {
                        "type": "string"
                    },
                    "permissions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "position": {
                        "type": "string"
                    }
                }
            }
        },
        "settings": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "key",
                    "type",
                    "label"
                ],
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "text",
                            "password",
                            "select",
                            "boolean",
                            "number",
                            "color"
                        ]
                    },
                    "label": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "oneOf": [
                                { "type": "string" },
                                {
                                    "type": "object",
                                    "properties": {
                                        "value": { "type": "string" },
                                        "label": { "type": "string" }
                                    }
                                }
                            ]
                        }
                    },
                    "default": {}
                }
            }
        },
        "webhooks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "event",
                    "url"
                ],
                "properties": {
                    "event": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "definitions": {
        "menuItem": {
            "type": "object",
            "required": [
                "label",
                "href"
            ],
            "properties": {
                "label": {
                    "type": "string"
                },
                "href": {
                    "type": "string"
                },
                "icon": {
                    "type": "string"
                },
                "order": {
                    "type": "number"
                },
                "permissions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            },
                            "icon": {
                                "type": "string"
                            },
                            "order": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
    }
}